    tags: [nimbus]
    type: s3
    source:
      regexp:            bosh-vsphere-cpi-([\d\.]+)\.tgz
      bucket:            ((s3_vsphere_cpi_bucket))
      access_key_id:     ((s3_vsphere_cpi_blobwriter_assume_aws_access_key.username))
