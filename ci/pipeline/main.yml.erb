          in_parallel:
          - put: pool-7.0-nsxt32-policy
            tags: [nimbus]
            inputs: detect
            params: { action: extend, lifetime: <%= 24 * 60 * 60 %>, resource: environment }
        on_success:
          put: pool-7.0-nsxt32-policy
