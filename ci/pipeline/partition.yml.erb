  - name: <%= e "lock-#{pool}" %>
    plan:
    - aggregate:
      - get: source-ci
      - get: bosh-cpi-src
        trigger: true
        passed: [unit-test]
    - do:
      - put: environment
        resource: <%= e "pool-#{pool}" %>
        params: { acquire: true }
        on_failure:
          put: <%= e "pool-#{pool}" %>
          params : { release: environment }
      attempts: 4

  - name: <%= e "lifecycle-#{pool}" %>
    serial: true
    plan:
    - aggregate:
      - get: source-ci
      - get: bosh-cpi-src
        passed: [<%= e "lock-#{pool}" %>]
      - get: environment
        resource: <%= e "pool-#{pool}" %>
        trigger: true
        passed: [<%= e "lock-#{pool}" %>]
      - get: stemcell
    - task: test
      file: source-ci/ci/tasks/run-lifecycle.yml
      params:
<% pool.params.each do |k, v| -%>
        <%= e k %>: <%= e v %>
<% end -%>
      on_failure:
        put: <%= e "pool-#{pool}" %>
        params : { remove: environment }

  - name: <%= e "unlock-#{pool}" %>
    plan:
    - get: <%= e "pool-#{pool}" %>
      trigger: true
      passed: [<%= e "lifecycle-#{pool}" %>]
    - put: <%= e "pool-#{pool}" %>
      params : { release: <%= e "pool-#{pool}" %> }
